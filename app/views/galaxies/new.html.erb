<%- if @galaxy.errors.present? -%>
  <%- @galaxy.errors.full_messages.each do |error| -%>
    <ul>
      <li><%= error %></li>
    </ul>
  <% end %>
<% end %>

<h1>New Galaxy</h1>
<div class="row">
  <div class="large-4 small-6 columns">
    <%= form_for @galaxy do |f| %>
      <div class="field">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>

      <div class="field">
        <%= f.label :rings %>
        <%= f.number_field :rings, in: 1..7 %>
      </div>
      <div class="actions">
        <%= f.submit "Create Galaxy" %>
      </div>
    <%- end -%>
  </div>
</div>
